    "build": "tsc",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1"
  }
}
