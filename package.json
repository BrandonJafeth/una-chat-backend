{
  "name": "una-chat-backend",
  "version": "1.0.0",
  "description": "UNA Chat Backend - Secure SSDLC Implementation",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "semgrep": "semgrep --config=auto src/",
    "semgrep:security": "semgrep --config=p/owasp-top-ten --config=p/nodejs src/",
    "semgrep:custom": "semgrep --config=.semgrep.yml src/",
    "semgrep:ci": "semgrep --config=auto src/ --json -o semgrep-report.json",
    "semgrep:watch": "semgrep --config=.semgrep.yml src/ --watch",
    "check-security": "npm run lint && npm run semgrep:custom && npm test"
  },
  "dependencies": {
    "@sentry/node": "^10.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-oauth2-jwt-bearer": "^1.7.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "jwks-rsa": "^3.2.0",
    "semgrep": "^0.0.1",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "xss": "^1.0.14",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
