{
  "name": "una-chat-backend",
  "version": "1.0.0",
  "description": "UNA Chat Backend - Secure SSDLC Implementation",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
